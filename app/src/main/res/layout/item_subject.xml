<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ui_lay_item_subject"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/ListItemColumnMargin"
    android:layout_marginTop="@dimen/ListItemColumnMargin"
    android:layout_marginRight="@dimen/ListItemColumnMargin"
    android:layout_marginBottom="@dimen/ListItemColumnMargin"
    android:minHeight="120dp">

    <TextView
        android:id="@+id/ui_txt_subject_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/SubjectTextViewMargin"
        android:layout_marginTop="@dimen/SubjectTextViewMargin"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ui_img_subject_run_indicator"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/SubjectImageButtonMargin"
        android:layout_marginBottom="@dimen/SubjectImageButtonMargin"
        android:src="@drawable/ic_rotate_right_black_24dp"/>

    <ImageButton
        android:id="@+id/ui_btn_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/SubjectImageButtonMargin"
        android:src="@drawable/ic_home_black_48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>